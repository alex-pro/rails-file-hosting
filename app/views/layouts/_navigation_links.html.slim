- if current_user
  li = form_tag items_path, class: "navbar-form navbar-left", remote: true, role: "search", method: 'get' do
    .input-group
      = text_field_tag :search, params[:search], placeholder: 'Шукати тут...', class: 'form-control'
      span.input-group-btn
        = submit_tag "Пошук!", name: nil, class: :"item_search btn btn-default"
  li = link_to 'Створити теку...', folders_path(parent_id: params[:id]), method: 'post'
  li = link_to 'Завантажити файли...', '#', 'data-target' => "#myModal", 'data-toggle' => "modal"
  li = link_to 'Профіль', edit_profile_path(current_user)
  li = link_to 'Вихід', session_path(current_user), method: 'delete'
- else
  li = link_to 'Реєстрація', new_user_path
  li = link_to 'Увійти', new_session_path
